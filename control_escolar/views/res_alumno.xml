<odoo>
    <data>

        <record id="res_alumno_tree" model="ir.ui.view">
            <field name="name">res.alumno.tree</field> 
            <field name="model">res.alumno</field>
            <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="edad"/>
                <field name="promedio"/>
            </tree>
            </field> 
        </record>

        <record id="res_alumno_form" model="ir.ui.view"> 
            <field name="name">res.alumno.form</field> 
            <field name="model">res.alumno</field>
            <field name="arch" type="xml">
                <form string="NÃºmero de servicio">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="edad"/>
                            </group>

                            <group>
                                <field name="promedio"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field> 
        </record>
    </data>
</odoo>
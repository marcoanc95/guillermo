<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="get_res_alumno_view" model="ir.actions.act_window">
        <field name="name">Alumnos</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.alumno</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Registra un nuevo alumno
            </p>
        </field>
    </record>

    <record id="control_escolar.res_alumno_dashboard" model="ir.ui.menu">
        <field name="action" eval="False"/>
        <field name="active" eval="True"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="name">Control escolar</field>
        <field name="parent_id" eval="False"/>
        <field name="sequence">8</field>
        <field name="web_icon">fa fa-cubes,#FFFFFF,#58a177</field>
    </record>

    <record id="control_escolar.res_alumno_menu" model="ir.ui.menu">
        <field name="action" ref="control_escolar.get_res_alumno_view"/>
        <field name="active" eval="True"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="name">Alumnos</field>
        <field name="parent_id" ref="control_escolar.res_alumno_dashboard"/>
        <field name="sequence">10</field>
        <field name="web_icon" eval="False"/>
    </record>
</odoo>